@require '~vuetify/src/stylus/app'
@import 'variables'

.theme--dark
 &.application, &.v-navigation-drawer, &.v-list, &.v-card
  background: $colors.background
  color: #eaeaea

.product-sans
  font-family: 'Product Sans' !important

img
  max-width: 100%
  height: auto


.v-btn--router:hover:before
  background-color: transparent !important
  box-shadow: inset 0 -4px 0 0 $colors.primary
  opacity: 1

.active--nav.v-btn:before
  opacity: 1
  box-shadow: inset 0 -4px 0 0 $colors.primary

a
  .v-btn__content
    text-align: center
    height: auto !important

.v-card {
  box-shadow: 2px -1px 7px 0 rgba(57,204,204,1), -2px 3px 8px 0  rgba(34,122,122,1)
}